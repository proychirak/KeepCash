<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="keepcash.views.summarypage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:keepcash;assembly=keepcash"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
    xmlns:lvcCore="clr-namespace:LiveChartsCore;assembly=LiveChartsCore"
    NavigationPage.HasNavigationBar="False">
    <Grid
        Margin="0"
        Padding="0"
        BackgroundColor="{AppThemeBinding Light={StaticResource LightBG}, Dark={StaticResource DarkBG}}"
        ColumnDefinitions="*"
        RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">

        <ImageButton
            x:Name="settingbtn"
            Clicked="settingbtn_Clicked"
            Grid.Row="0"
            Margin="0,0,30,12"
            Padding="5"
            Aspect="AspectFit"
            BackgroundColor="#3F9C55"
            BorderColor="Black"
            BorderWidth="1"
            CornerRadius="22"
            HeightRequest="40"
            HorizontalOptions="End"
            Source="settingbtn.png"
            VerticalOptions="Center"
            WidthRequest="40" />
        <Grid
            Grid.Row="1"
            Margin="-10"
            Padding="20"
            BackgroundColor="Transparent"
            ColumnDefinitions="*,*,*"
            HorizontalOptions="Center"
            VerticalOptions="End"
            WidthRequest="345">

            <!--  Frame ที่ต้องการแบ่ง  -->
            <Frame
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="0"
                BackgroundColor="White"
                BorderColor="Black"
                CornerRadius="21"
                HeightRequest="42"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="348">
                <Grid
                    ColumnDefinitions="*,2,*"
                    HeightRequest="42"
                    VerticalOptions="Fill">
                    <Picker
                        x:Name="YearPicker"
                        FontFamily="AvenirHeavy"
                        TextColor="Black"
                        Grid.Column="0"
                        HorizontalTextAlignment="Center"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill"
                        IsVisible="True"
                        SelectedIndexChanged="YearPicker_SelectedIndexChanged"/>
                    <BoxView
                        Grid.Column="1"
                        BackgroundColor="Black"
                        VerticalOptions="Fill"
                        WidthRequest="2" />
                    <Picker
                        x:Name="MonthPicker"
                        FontFamily="AvenirHeavy"
                        TextColor="Black"
                        Grid.Column="2"
                        HorizontalTextAlignment="Center"
                        WidthRequest="120"
                        HeightRequest="40"
                        SelectedIndexChanged="MonthPicker_SelectedIndexChanged"/>
                </Grid>
            </Frame>
        </Grid>
        <lvc:PieChart
            x:Name="PieChart"
            Grid.Row="2"
            HeightRequest="240"
            HorizontalOptions="Fill"
            BackgroundColor="Transparent">
        </lvc:PieChart>

        <Frame
            Grid.Row="3"
            Margin="0,10,0,0"
            Padding="5"
            BackgroundColor="White"
            BorderColor="Black"
            CornerRadius="15"
            HeightRequest="255"
            WidthRequest="342">

            <ListView 
                x:Name="TypeListView"
                Background="Transparent"
                Margin="-40,5,0,0"
                ItemSelected="ListView_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid
                                ColumnDefinitions="*,*,*"
                                BackgroundColor="Transparent"
                                WidthRequest="300"
                                HeightRequest="40"
                                VerticalOptions="Start"
                                HorizontalOptions="Center"
                                >
                                <Frame
                                    Grid.Column="0"
                                    Margin="0,0,0,0"
                                    Padding="0"
                                    BackgroundColor="{Binding TypeColor}"
                                    BorderColor="Black"
                                    CornerRadius="20"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    HeightRequest="40"
                                    WidthRequest="40">
                                    <Image
                                        Margin="0,0,0,0"
                                        Aspect="AspectFit"
                                        Source="{Binding TypeImage}"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        WidthRequest="40"
                                        HeightRequest="40"/>
                                </Frame>
                                <Label
                                    Grid.Column="1"
                                    Margin="0,0,0,0"
                                    Padding="0"
                                    FontFamily="AvenirHeavy"
                                    FontSize="15"
                                    HorizontalOptions="Center"
                                    Text="{Binding TypeName}"
                                    TextColor="Black"
                                    VerticalOptions="Center" />
                                <Frame
                                    Grid.Column="2"
                                    Margin="0,0,0,0"
                                    Padding="0"
                                    BackgroundColor="#D9D9D9"
                                    BorderColor="Black"
                                    CornerRadius="15"
                                    HeightRequest="31"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center"
                                    WidthRequest="100">
                                    <Label
                                        Margin="0,0,0,0"
                                        Padding="0"
                                        FontFamily="AvenirHeavy"
                                        FontSize="15"
                                        HorizontalOptions="Center"
                                        Text="{Binding Total}"
                                        TextColor="Black"
                                        VerticalOptions="Center" />
                                </Frame>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Frame>
        <Frame
            Grid.Row="4"
            Padding="0"
            Margin="0, 12, 0, 0"
            BackgroundColor="#FFFFFF"
            BorderColor="Black"
            CornerRadius="20"
            HeightRequest="60"
            HorizontalOptions="Center"
            WidthRequest="348">

            <Grid
                RowDefinitions="Auto"
                ColumnDefinitions="*,*">
                <Label
                    Text="Balance"
                    FontFamily="AvenirHeavy"
                    FontSize="14"
                    Margin="0,15,0,0"
                    TextColor="Black"
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
                <Frame
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="30,15,30,0"
                    Padding="0"
                    BackgroundColor="#D9D9D9"
                    BorderColor="Black"
                    CornerRadius="15"
                    HeightRequest="33"
                    VerticalOptions="Center"
                    HorizontalOptions="Fill"/>
                <Label
                    Text="0"
                    x:Name="BalanceLabel"
                    Grid.Column="1"
                    FontFamily="AvenirHeavy"
                    FontSize="14"
                    Margin="40,15,30,0"
                    TextColor="Black"
                    Grid.Row="0"
                    HorizontalOptions="Fill"
                    VerticalOptions="Center" />
            </Grid>
        </Frame>    

        <Grid
            Grid.Row="5"
            Margin="-10"
            Padding="20"
            BackgroundColor="Transparent"
            ColumnDefinitions="*,*,*"
            HorizontalOptions="Center"
            VerticalOptions="End"
            WidthRequest="345">

            <Frame
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="0"
                BackgroundColor="White"
                BorderColor="Black"
                CornerRadius="32"
                HeightRequest="64"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="345" />

            <ImageButton
                x:Name="menu1btn"
                Clicked="menu1btn_Clicked"
                Grid.Column="0"
                Margin="0"
                Padding="10"
                Aspect="AspectFit"
                BackgroundColor="White"
                BorderColor="Black"
                BorderWidth="1"
                CornerRadius="25"
                HeightRequest="50"
                HorizontalOptions="Center"
                Source="menu1.png"
                VerticalOptions="Center"
                WidthRequest="60" />

            <ImageButton
                x:Name="menu2btn"
                Clicked="menu2btn_Clicked"
                Grid.Column="1"
                Margin="0"
                Padding="10"
                Aspect="AspectFit"
                BackgroundColor="White"
                BorderColor="Black"
                BorderWidth="1"
                CornerRadius="25"
                HeightRequest="50"
                HorizontalOptions="Center"
                Source="menu2.png"
                VerticalOptions="Center"
                WidthRequest="60" />

            <ImageButton
                x:Name="menu3btn"
                Clicked="menu3btn_Clicked"
                Grid.Column="2"
                Margin="0"
                Padding="5"
                Aspect="AspectFit"
                BackgroundColor="White"
                BorderColor="Black"
                BorderWidth="1"
                CornerRadius="25"
                HeightRequest="50"
                HorizontalOptions="Center"
                Source="menu3.png"
                VerticalOptions="Center"
                WidthRequest="60" />
        </Grid>
    </Grid>
</ContentPage>