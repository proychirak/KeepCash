<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="keepcash.views.summarypage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    NavigationPage.HasNavigationBar="False">
    <Grid
        Margin="0"
        Padding="0"
        BackgroundColor="#FFFEEC"
        ColumnDefinitions="*"
        RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">

        <ImageButton
            x:Name="settingbtn"
            Clicked="settingbtn_Clicked"
            Grid.Row="0"
            Margin="0,0,30,12"
            Padding="5"
            Aspect="AspectFit"
            BackgroundColor="#3F9C55"
            BorderColor="Black"
            BorderWidth="1"
            CornerRadius="22"
            HeightRequest="40"
            HorizontalOptions="End"
            Source="settingbtn.png"
            VerticalOptions="Center"
            WidthRequest="40" />
        <Grid
            Grid.Row="1"
            Margin="-10"
            Padding="20"
            BackgroundColor="Transparent"
            ColumnDefinitions="*,*,*"
            HorizontalOptions="Center"
            VerticalOptions="End"
            WidthRequest="345">

            <!--  Frame ที่ต้องการแบ่ง  -->
            <Frame
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="0"
                BackgroundColor="White"
                BorderColor="Black"
                CornerRadius="21"
                HeightRequest="42"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="348">

                <Grid
                    ColumnDefinitions="*,2,*"
                    HeightRequest="42"
                    VerticalOptions="Fill">

                    
                    <Picker
                        x:Name="YearPicker"
                        FontFamily="AvenirHeavy"
                        Grid.Column="0"
                        HorizontalTextAlignment="Center"
                        WidthRequest="120"
                        HeightRequest="40"
                        IsVisible="False" />

                    <!--  เส้นแบ่งตรงกลาง  -->
                    <BoxView
                        Grid.Column="1"
                        BackgroundColor="Black"
                        VerticalOptions="Fill"
                        WidthRequest="2" />

                   
                    <Picker
                        x:Name="MonthPicker"
                        FontFamily="AvenirHeavy"
                        Grid.Column="2"
                        HorizontalTextAlignment="Center"
                        WidthRequest="120"
                        HeightRequest="40" />

                </Grid>

            </Frame>

        </Grid>

        <BoxView
            Grid.Row="2"
            Margin="0, 5, 0, 0"
            BackgroundColor="#E01073"
            HorizontalOptions="Center"
            WidthRequest="240" 
            HeightRequest="240"
            CornerRadius="120"/>

        <Frame
            Grid.Row="3"
            Margin="0,10,0,0"
            Padding="5"
            BackgroundColor="White"
            BorderColor="Black"
            CornerRadius="15"
            HeightRequest="255"
            WidthRequest="342">

            <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*,*">

                <Frame
                    Padding="0"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="-40,-10,0,0"
                    BackgroundColor="Transparent"
                    BorderColor="Black"
                    CornerRadius="20"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    WidthRequest="40">

                    <BoxView
                        BackgroundColor="#3C82D9"
                        HeightRequest="100"
                        WidthRequest="200" />
                </Frame>

                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="-40,-10,0,0"
                    Padding="0"
                    FontFamily="AvenirHeavy"
                    FontSize="15"
                    HorizontalOptions="Center"
                    Text="Food"
                    TextColor="Black"
                    VerticalOptions="Center" />

                <Frame
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="0,-10,0,0"
                    Padding="0"
                    BackgroundColor="#D9D9D9"
                    BorderColor="Black"
                    CornerRadius="15"
                    HeightRequest="31"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    WidthRequest="100">

                    <Label
                        Margin="0,0,0,0"
                        Padding="0"
                        FontFamily="AvenirHeavy"
                        FontSize="15"
                        HorizontalOptions="Center"
                        Text="Price"
                        TextColor="Black"
                        VerticalOptions="Center" />

                </Frame>

                <Frame
                    Padding="0"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="-40,-10,0,0"
                    BackgroundColor="Transparent"
                    BorderColor="Black"
                    CornerRadius="20"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    WidthRequest="40">

                    <BoxView
                        BackgroundColor="#E01073"
                        HeightRequest="100"
                        WidthRequest="200" />
                </Frame>

                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="-40,-10,0,0"
                    Padding="0"
                    FontFamily="AvenirHeavy"
                    FontSize="15"
                    HorizontalOptions="Center"
                    Text="Food"
                    TextColor="Black"
                    VerticalOptions="Center" />

                <Frame
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="0,-10,0,0"
                    Padding="0"
                    BackgroundColor="#D9D9D9"
                    BorderColor="Black"
                    CornerRadius="15"
                    HeightRequest="31"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    WidthRequest="100">

                    <Label
                        Margin="0,0,0,0"
                        Padding="0"
                        FontFamily="AvenirHeavy"
                        FontSize="15"
                        HorizontalOptions="Center"
                        Text="Price"
                        TextColor="Black"
                        VerticalOptions="Center" />

                </Frame>

                <Frame
                    Padding="0"
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="-40,-10,0,0"
                    BackgroundColor="Transparent"
                    BorderColor="Black"
                    CornerRadius="20"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    WidthRequest="40">

                    <BoxView
                        BackgroundColor="#F7CF46"
                        HeightRequest="100"
                        WidthRequest="200" />
                </Frame>

                <Label
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="-40,-10,0,0"
                    Padding="0"
                    FontFamily="AvenirHeavy"
                    FontSize="15"
                    HorizontalOptions="Center"
                    Text="Food"
                    TextColor="Black"
                    VerticalOptions="Center" />

                <Frame
                    Grid.Row="2"
                    Grid.Column="2"
                    Margin="0,-10,0,0"
                    Padding="0"
                    BackgroundColor="#D9D9D9"
                    BorderColor="Black"
                    CornerRadius="15"
                    HeightRequest="31"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    WidthRequest="100">

                    <Label
                        Margin="0,0,0,0"
                        Padding="0"
                        FontFamily="AvenirHeavy"
                        FontSize="15"
                        HorizontalOptions="Center"
                        Text="Price"
                        TextColor="Black"
                        VerticalOptions="Center" />

                </Frame>
            </Grid>
        </Frame>

 <Frame
            Grid.Row="4"
            Padding="0"
            Margin="0, 12, 0, 0"
            BackgroundColor="#FFFFFF"
            BorderColor="Black"
            CornerRadius="20"
            HeightRequest="60"
            HorizontalOptions="Center"
            WidthRequest="348">

            <Grid
                RowDefinitions="Auto"
                ColumnDefinitions="*,*">

                <Label
                    Text="Balance"
                    FontFamily="AvenirHeavy"
                    FontSize="14"
                    Margin="0,15,0,0"
                    TextColor="Black"
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />

                <Frame
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="30,15,0,0"
                    Padding="0"
                    BackgroundColor="#D9D9D9"
                    BorderColor="Black"
                    CornerRadius="15"
                    HeightRequest="33"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    WidthRequest="126"/>
                        
                       

            </Grid>
        </Frame>    

        <Grid
            Grid.Row="5"
            Margin="-10"
            Padding="20"
            BackgroundColor="Transparent"
            ColumnDefinitions="*,*,*"
            HorizontalOptions="Center"
            VerticalOptions="End"
            WidthRequest="345">

            <Frame
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="0"
                BackgroundColor="White"
                BorderColor="Black"
                CornerRadius="32"
                HeightRequest="64"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="345" />

            <ImageButton
                x:Name="menu1btn"
                Clicked="menu1btn_Clicked"
                Grid.Column="0"
                Margin="0"
                Padding="10"
                Aspect="AspectFit"
                BackgroundColor="White"
                BorderColor="Black"
                BorderWidth="1"
                CornerRadius="25"
                HeightRequest="50"
                HorizontalOptions="Center"
                Source="menu1.png"
                VerticalOptions="Center"
                WidthRequest="60" />

            <ImageButton
                x:Name="menu2btn"
                Clicked="menu2btn_Clicked"
                Grid.Column="1"
                Margin="0"
                Padding="10"
                Aspect="AspectFit"
                BackgroundColor="White"
                BorderColor="Black"
                BorderWidth="1"
                CornerRadius="25"
                HeightRequest="50"
                HorizontalOptions="Center"
                Source="menu2.png"
                VerticalOptions="Center"
                WidthRequest="60" />

            <ImageButton
                x:Name="menu3btn"
                Clicked="menu3btn_Clicked"
                Grid.Column="2"
                Margin="0"
                Padding="5"
                Aspect="AspectFit"
                BackgroundColor="White"
                BorderColor="Black"
                BorderWidth="1"
                CornerRadius="25"
                HeightRequest="50"
                HorizontalOptions="Center"
                Source="menu3.png"
                VerticalOptions="Center"
                WidthRequest="60" />
        </Grid>
    </Grid>
</ContentPage>